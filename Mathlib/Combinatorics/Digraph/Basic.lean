@[simps]
instance (V : Type u) : Inhabited (Digraph V) :=
  ‚ü®‚ä•‚ü©

instance [IsEmpty V] : Unique (Digraph V) where
  default := ‚ä•
  uniq G := by ext1; congr!

instance [h : Nonempty V] : Nontrivial (Digraph V) := by
  use ‚ä•, ‚ä§
